{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4]
    },
    "globals": {
        "driver":"readonly",
        "browser":"readonly",
        "$":"readonly",
        "$$":"readonly",
        "it":"readonly",
        "describe":"readonly",
        "expect":"readonly",
        "context":"readonly",
        "beforeEach":"readonly",
        "afterEach":"readonly"
    }
}
